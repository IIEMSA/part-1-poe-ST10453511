@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PoeApp.Models.BookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
